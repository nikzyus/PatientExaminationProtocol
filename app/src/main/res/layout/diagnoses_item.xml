<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="20dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="15dp"
    app:strokeColor="@color/blackDefault"
    app:strokeWidth="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/diagnosesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "Название диагноза"
            android:lines="2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textColor="@color/blackDefault"
            />

        <TextView
            android:id="@+id/diagnosesNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Номер диагноза"
            android:lines="1"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/diagnosesName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/diagnosesListSymptoms"
            android:textColor="@color/blackDefault"
            />

        <TextView
            android:id="@+id/diagnosesListSymptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Список симптомов"
            android:lines="2"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/diagnosesNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/blackDefault"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>