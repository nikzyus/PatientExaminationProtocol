<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.notes.patientexaminationprotocol.fragments.menu.MenuFragment">

    <data>
        <variable
            name="menuVM"
            type="com.example.notes.patientexaminationprotocol.fragments.menu.MenuViewModel"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/txtMenu"
            android:text="@string/txtMenu"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="22dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <View
            android:id="@+id/menuDivider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/txtMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_patients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Patient"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/txtMenu"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="20dp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/black"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_protocols"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Протоколы осмотра"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/txtMenu"
            app:layout_constraintStart_toEndOf="@id/btn_patients"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cornerRadius="8dp"
            android:padding="20dp"
            android:backgroundTint="@color/black"/>

        <View
            android:id="@+id/menuDivider2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/btn_patients"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txtMenu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_patients"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/spravInfo"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_diagnoses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtDiagnoses"
            app:layout_constraintTop_toBottomOf="@id/txtMenu2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/black"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_symptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtSymptoms"
            app:layout_constraintTop_toBottomOf="@id/txtMenu2"
            app:layout_constraintStart_toEndOf="@id/btn_diagnoses"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:padding="20dp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/black"
            />

        <View
            android:id="@+id/menuDivider3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/btn_diagnoses"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txtMenu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_diagnoses"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Прочие сведения"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_personalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:text="@string/personalInfo"
            app:layout_constraintTop_toBottomOf="@id/txtMenu3"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="20dp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/black"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_organizationInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Информация о больнице и отделении"
            app:layout_constraintTop_toBottomOf="@id/btn_personalInfo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:padding="20dp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/black"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>